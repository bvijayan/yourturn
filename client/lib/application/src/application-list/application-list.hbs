<h2 class="applicationList-headline">Applications</h2>
<div class="btn-group">
    <a href="/application/create" class="btn btn-primary">
    <i class="fa fa-plus"></i> Create Application</a>
</div>
<div class="form-group">
    <form class="form">
        <label for="yourturn-search">Search:</label>
        <div class="input-group">
            <input
                name="yourturn_search"
                autofocus="autofocus"
                value="{{term}}"
                type="search"
                aria-label="Enter your term"
                data-action="search"
                placeholder="Kio" />
            <button
                type="submit"
                class="btn btn-default">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
    </form>
</div>
<h4>Your Applications</h4>
{{#if teamApps.length}}
    <ul data-block="team-apps">
        {{#each teamApps}}
            <li>
                <a href="/application/detail/{{this.id}}">{{this.name}}</a>
            </li>
        {{/each}}
    </ul>
{{else}}
    No applications owned by your team.
{{/if}}

<h4>Other Applications</h4>
{{#if otherApps.length}}
    <ul data-block="other-apps">
        {{#each otherApps}}
            <li>
                <a href="/application/detail/{{this.id}}">{{this.name}}</a>
            </li>
        {{/each}}
    </ul>
    {{#if otherAppsHiddenCount}}
        <small data-block="other-apps-hidden-count">
            + <span>{{otherAppsHiddenCount}}</span> hidden.
        </small>
    {{/if}}
{{else}}
    No applications owned by other teams.
{{/if}}
