<h2>
    {{#if application}}
        <a href="/application/detail/{{applicationId}}">{{application.name}}</a> versions
    {{else}}
        <a href="/application/detail/{{applicationId}}">{{applicationId}}</a> versions
    {{/if}}
</h2>
<div class="btn-group">
    <a href="/application/detail/{{applicationId}}" class="btn btn-default">
        <i class="fa fa-chevron-left"></i>
            {{#if application }}{{application.name}}{{else}}{{applicationId}}{{/if}}
    </a>
    <a href="/application/detail/{{applicationId}}/version/create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create new version
    </a>
</div>
<div class="form-group">
    <form class="form">
        <label for="yourturn-search">Search:</label>
        <div class="input-group">
            <input
                name="yourturn_version_search"
                autofocus="autofocus"
                value="{{term}}"
                type="search"
                aria-label="Enter your search term"
                data-action="search"
                data-block="search-input"
                placeholder="1.0-squirrel" />
            <button
                type="submit"
                data-block="search-button"
                class="btn btn-default">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
    </form>
</div>

{{#if versions.length}}
    <ul class="versionList-list"
        data-block="versions">
        {{#each versions}}
            <li>
                <a  title="Approve version {{this.id}}"
                    class="btn btn-default btn-small"
                    href="/application/detail/{{this.application_id}}/version/approve/{{this.id}}">
                    <i class="fa fa-check"></i>
                </a>
                <a href="/application/detail/{{this.application_id}}/version/detail/{{this.id}}">
                    {{this.id}}
                </a>
            </li>
        {{/each}}
    </ul>
{{else}}
    No versions.
{{/if}}
