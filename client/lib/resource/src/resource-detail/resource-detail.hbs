<h2>{{resource.name}}</h2>
<div>
    <a href="/resource/{{resource.id}}/create" class="btn btn-default">
        <i class="fa fa-plus"></i> Create scope
    </a>
</div>
<table>
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{resource.id}}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{resource.name}}</td>
        </tr>
        <tr>
            <th>Owners</th>
            <td>
                <ul>
                    {{#each resource.owners}}
                        <li>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            </td>
        </tr>
    </tbody>
</table>
<h4 class="resourceDetail-scopeTitle">Scopes</h4>
{{#if scopes.length}}
    <ul>
        {{#each scopes}}
            <li>
                <a href="/resource/{{../resource.id}}/{{this}}">{{this}}</a>
            </li>
        {{/each}}
    </ul>
{{else}}
    No scopes to display.
{{/if}}
<h4 class="resourceDetail-descriptionTitle">Description</h4>
<p data-action="markdown">
    {{resource.description}}
</p>