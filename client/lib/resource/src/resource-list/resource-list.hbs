<h2>Resources</h2>
<div class="btn-group">
    <a href="resource/create" class="btn btn-default">
        <i class="fa fa-plus"></i> Create resource
    </a>
</div>
{{#if resources.length}}
    <ul>
        {{#each resources}}
            <li>
                <a href="resource/detail/{{this}}">{{this}}</a>
            </li>
        {{/each}}
    </ul>
{{else}}
    No resources to display.
{{/if}}